.tagShow
  .tagShowHeader
    %h1.tagShowHeader_name= @tag.name

    .tagShowHeader_followButton
      - if current_user.try!(:following_tag?, @tag)
        = link_to "解除", tag_tagfollow_path(@tag.name), :method => :delete, :class => 'btn btn-default'
      - else
        = link_to "フォロー", tag_tagfollow_path(@tag.name), :method => :post, :class => 'btn btn-primary'

  .tagShowStats
    .tagShowStats_metric
      .count
        #{@tag.taggings_count}
      .unit
        投稿
    .tagShowStats_metric
      .count
        #{@tag.users.count}
      .unit
        フォロワー
    %p.tagShowStats_description
      #{@tag.name}に関する情報が集まっています。
      現在#{@tag.taggings_count}件の投稿があります。
      また#{@tag.users.count}人のユーザーが#{@tag.name}グをフォローしています。

  .activities
    = render partial: Article.tagged_with(@tag.name).published.includes([:author, :tags])

