= form_for @profile, :url => user_profile_path(current_user) do |f|
  - if @profile.errors.any?
    #error_explanation
      %h2= "#{pluralize(@profile.errors.count, "error")} prohibited this profile from being saved:"
      %ul
        - @profile.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :first_name
    = f.text_field :first_name
  .field
    = f.label :last_name
    = f.text_field :last_name
  .field
    = f.label :blog_url
    = f.text_field :blog_url
  .field
    = f.label :organization
    = f.text_field :organization
  .field
    = f.label :introducion
    = f.text_field :introducion
  .field
    = f.label :qiita_id
    = f.text_field :qiita_id
  .actions
    = f.submit 'Save'
