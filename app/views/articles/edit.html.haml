= form_for @article do |f|
  - if @article.errors.any?
    #error_explanation
      %h2 = "#{pluralize(@article.errors.count, "error")} prohibited this area from being saved:"
      %ul
        - @article.errors.full_messages.each do |message|
          %li = message

  .form-group
    = f.label :title
    = f.text_field :title, class: "form-control"

  .form-group
    = f.label :body
    = f.text_area :body, class: "form-control", size: "10x20"

  .actions
    = f.submit
