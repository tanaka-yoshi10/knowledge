.item-box
  .item-box-avatar
    = link_to_user_with_avatar(article.author, 40)
  %div
    .item-box-header
      #{link_to article.author.name, article.author}が#{l article.created_at}に投稿しました
    .item-box-title
      %strong= link_to article.title, article
      - article.tag_list.each do |tag|
        %span.label.label-info= link_to tag, tag_path(tag)
